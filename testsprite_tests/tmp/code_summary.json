{
  "project_name": "OKR Management System",
  "description": "A comprehensive OKR (Objectives and Key Results) management system with Spring Boot backend and Next.js frontend",
  "tech_stack": {
    "backend": {
      "framework": "Spring Boot",
      "language": "Java",
      "database": "PostgreSQL",
      "migration": "Liquibase",
      "security": "Spring Security with JWT",
      "validation": "Jakarta Validation",
      "mapping": "MapStruct",
      "utilities": "Lombok"
    },
    "frontend": {
      "framework": "Next.js",
      "language": "TypeScript",
      "styling": "Tailwind CSS",
      "i18n": "react-i18next",
      "state_management": "React Context API",
      "http_client": "Fetch API with custom wrapper"
    },
    "database": {
      "type": "PostgreSQL",
      "migration_tool": "Liquibase",
      "format": "YAML"
    },
    "development": {
      "build_tool": "Maven (backend), pnpm (frontend)",
      "package_manager": "pnpm",
      "testing": "TestSprite (automated testing)"
    }
  },
  "architecture": {
    "pattern": "Layered Architecture",
    "backend_layers": [
      "Presentation Layer (Controllers)",
      "Application Layer (Services)", 
      "Domain Layer (Models, Repositories)",
      "Infrastructure Layer (Database, Security)"
    ],
    "frontend_structure": [
      "Pages (Next.js App Router)",
      "Components (Reusable UI)",
      "Contexts (State Management)",
      "Lib (Utilities, API, Auth)",
      "Types (TypeScript Definitions)"
    ]
  },
  "key_features": [
    "User Authentication & Authorization",
    "Workspace Management", 
    "Objective Management (Company, Department, Team, KPI)",
    "Key Results Management",
    "Check-in System",
    "Alignment Tree Visualization",
    "Activity Log",
    "Profile Management",
    "Settings & Notifications",
    "Import/Export Functionality",
    "Multi-language Support (English/Vietnamese)",
    "Responsive Design"
  ],
  "database_schema": {
    "core_entities": [
      "users",
      "workspaces", 
      "workspace_members",
      "teams",
      "objectives",
      "key_results",
      "check_ins",
      "comments",
      "objective_alignments",
      "intervals",
      "groups",
      "group_members"
    ],
    "audit_fields": "id (ULID), created_by, created_date, last_modified_by, last_modified_date"
  },
  "api_endpoints": {
    "authentication": [
      "POST /auth/login",
      "POST /auth/register", 
      "POST /auth/refresh",
      "GET /auth/me",
      "PUT /auth/me"
    ],
    "objectives": [
      "GET /objectives",
      "POST /objectives",
      "GET /objectives/{id}",
      "PUT /objectives/{id}",
      "DELETE /objectives/{id}"
    ],
    "key_results": [
      "GET /key-results",
      "POST /key-results", 
      "PUT /key-results/{id}",
      "DELETE /key-results/{id}"
    ],
    "check_ins": [
      "GET /check-ins",
      "POST /check-ins",
      "PUT /check-ins/{id}"
    ],
    "workspaces": [
      "GET /workspaces",
      "POST /workspaces",
      "GET /workspaces/{id}"
    ],
    "settings": [
      "GET /settings/notifications",
      "PUT /settings/notifications"
    ],
    "activity_log": [
      "GET /activity-log"
    ]
  },
  "frontend_pages": [
    "/login",
    "/register", 
    "/dashboard",
    "/okr",
    "/okr/[id]",
    "/okr/alignment",
    "/okr/roadmap",
    "/check-ins",
    "/activity",
    "/settings",
    "/settings/workspaces",
    "/settings/groups",
    "/settings/components",
    "/settings/integrations", 
    "/settings/notifications",
    "/profile",
    "/workspaces",
    "/workspaces/[id]"
  ],
  "components": {
    "layout": [
      "Layout",
      "Header", 
      "Sidebar",
      "WorkspaceSelector"
    ],
    "okr_management": [
      "OKRTable",
      "OKRHeader",
      "ObjectiveModal",
      "ObjectiveDetailModal",
      "KeyResultModal",
      "AlignmentTree",
      "ObjectiveCard"
    ],
    "forms": [
      "Input",
      "Button",
      "Modal",
      "Select",
      "Textarea",
      "CheckInForm"
    ],
    "ui_components": [
      "StatusPill",
      "GroupPill", 
      "ProgressBar",
      "Loading",
      "SearchBox",
      "FilterPanel"
    ],
    "settings": [
      "RoleManagement",
      "MemberAssignment",
      "ImportModal",
      "ExportModal"
    ]
  },
  "recent_fixes": [
    "Fixed i18n missing translation keys",
    "Fixed objective duplication issue in OKRTable",
    "Fixed logout button functionality", 
    "Fixed key result creation button",
    "Created missing register page",
    "Fixed registration API integration"
  ],
  "testing_status": {
    "browser_tests": "12/13 passed (92%)",
    "test_coverage": "High priority test cases covered",
    "automated_testing": "TestSprite integration",
    "manual_testing": "Browser automation with Playwright"
  },
  "deployment": {
    "backend_port": 8080,
    "frontend_port": 3000,
    "database_port": 5432,
    "environment": "Development"
  }
}